
<div class = 'banner products'>
  <h1> All the products</h1>
</div>

<div class = 'container'>
  <div class = 'row' id='list'>
    <div class='col-sm-6 col-sm-offset-3'>
      <div class='new-form'>
      <%= form_tag products_path(anchor: 'list'), method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          placeholder: "Find a product",
          class: 'form-controle'
        %>
        <%= select_tag :price, "<option>>1 €</option><option>1-5 €</option><option>Bird </option><option>Reptile</option><option>Dragon</option><option>Unicorn</option><option>Rabbit</option><option>Fish</option>", include_blank: true%>
        <%= submit_tag "Find Your Happiness"%>
      <% end %>
      </div>
    </div>

    <% @products.each do |p| %>
      <% if p.status == "for-sale" %>
        <div class = 'col-sm-12 col-md-6'>
          <a href="/products/<%= p.id %>" style = "text-decoration: none">
            <div class= 'card-product'>
              <div class = card-product-image style = "background-image: url(<%= cl_image_path p.picture %>);">

              </div>
              <div class = 'card-product-description'>
                <div class = 'card-product-description-name'> <%= p.name %> </div>
                <div class = 'card-product-description-price'> <%= p.price %> € </div>
              </div>
            </div>
          </a>
        </div>
      <%end%>
    <%end%>
  </div>
</div>

