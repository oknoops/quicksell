<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <div class = 'show-product'>
        <div class = "show-product-images" style = "background-image: url(<%= cl_image_path @product.pictures.first.url if @product.pictures.first %>);"></div>
        <div class = 'show-product-name'> <%= @product.name %> </div>
        <div class = 'show-product-price'> <%= @product.price %> â‚¬ </div>
      </div>
    </div>
  </div>
</div>

<%= link_to "delete", product_path(@product), method: :delete, data: { confirm: "Are you sure you want to delete this product?" } %>
<%= link_to "edit",edit_product_path(@product) %>
<% if @product.status == "for-sale" && @product.user != current_user %>
    <%= form_tag product_sales_path(@product, @sales) do %>
      <%= hidden_field_tag 'product_id', @product.id, method: :post %>
      <%= submit_tag 'Purchase', class: 'btn btn-primary' %>
    <% end %>
<% end %>

