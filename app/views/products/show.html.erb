<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <a href="/products/<%= @product.id %>" style = "text-decoration: none">
        <div class= 'card-product'>
          <div class = card-product-image style = "background-image: url(<%= cl_image_path @product.picture %>);">

          </div>
          <div class = 'card-product-description'>
            <div class = 'card-product-description-name'> <%= @product.name %> </div>
            <div class = 'card-product-description-price'> <%= @product.price %> â‚¬ </div>
          </div>
        </div>
      </a>
    </div>
      <%= link_to "delete", product_path(@product), method: :delete, data: { confirm: "Are you sure you want to delete this product?" } %>
      <%= link_to "edit",edit_product_path(@product) %>
      <% if @product.status == "for-sale" && @product.user != current_user %>
        <%= form_tag product_sales_path(@product, @sales) do %>
          <%= hidden_field_tag 'product_id', @product.id, method: :post %>
          <%= submit_tag 'Purchase', class: 'btn btn-primary' %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
