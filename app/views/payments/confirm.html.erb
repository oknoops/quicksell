
<div class="container">
  <div class="row">
    <div class = 'col-sm-4 col-sm-offset-4'>
      <div class = 'wallet-title'>
        <i class="fas fa-wallet"></i>
      </div>
    </div>
  </div>

  <div class = 'row'>
    <div class = 'col-sm-4 col-sm-offset-4'>
      <div class = 'wallet-amount'>
        Balance:
        <%= current_user.wallet %> €
      </div>
    </div>
  </div>

  <div class = 'row'>
    <div class="col-sm-4 col-sm-offset-4">
      <div class = add-money>
        <div class="new-form">
          <div id="error_explanation">
        <h3> Adding to your Wallet  </h3>
      <%= form_tag payments_path(@sale, url: payments_path) do %>
        <article>
          <label class="amount">
            <span>Amount: <%= humanized_money_with_symbol(params[:amount]) %></span>
          </label>
        </article>
         <%= hidden_field_tag :amount, params[:amount] %>
          <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-name="Adding Money to My Wallet"
            data-email="<%= current_user.email %>"
            data-description="Adding <%= params[:amount] %> € to your Wallet"
            data-amount="<%= params[:amount].to_f * 100 %> "
            data-currency="eur">
          </script>
        <% end %>
      </div>
    </div>
  </div>
</div>
