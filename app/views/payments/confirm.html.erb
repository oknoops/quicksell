<div class="container">
  <div class="row">
    <div class="col-md-4 col-sm-offset-4">
      <h1> Adding to your Waller  </h1>
      <%= form_tag payments_path(@sale, url: payments_path) do %>
        <article>
          <label class="amount">
            <span>Amount: <%= humanized_money_with_symbol(params[:amount]) %></span>
          </label>
        </article>
         <%= hidden_field_tag :amount, params[:amount] %>

      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-name="Adding Money to My Wallet"
          data-email="<%= current_user.email %>"
          data-description="Adding <%= params[:amount]%> to your Wallet"
          data-amount="<%= params[:amount] %> "
          data-currency="eur">
      </script>
      <% end %>
    </div>
  </div>
</div>

