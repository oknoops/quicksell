<div class="container">
  <div class="row">
    <div class = 'col-sm-4 col-sm-offset-4'>
      <div class = 'wallet-title'>
        <i class="fas fa-wallet"></i>
      </div>
    </div>
  </div>

  <div class = 'row'>
    <div class = 'col-sm-4 col-sm-offset-4'>
      <div class = 'wallet-amount'>
        Balance:
        <%= current_user.wallet %> â‚¬
      </div>
    </div>
  </div>

  <div class = 'row'>
    <div class="col-sm-4 col-sm-offset-4">
      <div class = add-money>
        <div class="new-form">
        <%= form_tag payments_moneyback_path, method: 'get' do %>
          <div id="error_explanation">
            <% if flash[:error].present? %>
              <p><%= flash[:error] %></p>
            <% end %>
          </div>
          <article>
            <%= label_tag(:amount, 'Amount to retrieve:') %>
            <%= text_field_tag(:amount) %>
          </article>
          <article>
            <%= label_tag(:card, 'Your Card Number') %>
            <%= text_field_tag(:card) %>
          </article>
          <button id='donateButton' class = button-add-money>Retrieve from Wallet</button>
        <% end %>
      </div>
    </div>
  </div>
</div>
