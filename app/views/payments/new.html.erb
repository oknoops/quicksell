<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="new-form">
      <%= form_tag payments_confirm_path, method: 'get' do %>
        <div id="error_explanation">
          <% if flash[:error].present? %>
            <p><%= flash[:error] %></p>
          <% end %>
        </div>
        <article>
          <%= label_tag(:amount, 'Amount to add:') %>
          <%= text_field_tag(:amount) %>
        </article>
        <article>
          <%= hidden_field_tag(:stripeToken) %>
        </article>
        <button id='donateButton'>Add to Wallet</button>
      <% end %>
    </div>
  </div>
</div>



