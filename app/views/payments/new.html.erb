<div class="container">
  <div class="row">
    <div class = 'col-sm-12'>
      <div class = 'wallet-title'>
        <i class="fas fa-euro-sign"></i>
      </div>
    </div>
    <div class = 'col-sm-12'>
      <div class = 'wallet-amount'>
        <i class="fas fa-wallet"></i>
        <%= current_user.wallet %> â‚¬
      </div>
    </div>
  </div>
  <div class = 'row'>
    <div class="col-md-6">
      <div class="new-form">
      <%= form_tag payments_confirm_path, method: 'get' do %>
        <div id="error_explanation">
          <% if flash[:error].present? %>
            <p><%= flash[:error] %></p>
          <% end %>
        </div>
        <article>
          <%= label_tag(:amount, 'Amount to add:') %>
          <%= text_field_tag(:amount) %>
        </article>
        <article>
          <%= hidden_field_tag(:stripeToken) %>
        </article>
        <button id='donateButton' class = 'button-alternative'>Add to Wallet</button>
      <% end %>
    </div>
  </div>
</div>



